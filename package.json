{
  "name": "cyclist",
  "version": "0.0.0",
  "description": "Build lifecycles for JS projects",
  "main": "index.js",
  "repository": "git@github.com:dpisani/cyclist.git",
  "author": "dpisani <dean.a.pisani@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "tsc --build",
    "link:runner": "yarn workspace @cyclist/runner build:link",
    "test-clean": "tsc --build --clean tsconfig-test.json",
    "test-build": "tsc --build tsconfig-test.json",
    "test-build:watch": "tsc --build tsconfig-test.json --watch",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "validate": "manypkg check && yarn prettier --check",
    "version": "changeset version",
    "prettier": "prettier **/*.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "cyclist": {
    "lifecycles": {
      "package": {
        "stages": [
          "validate",
          "test-clean",
          "test-build",
          "test",
          "clean",
          "build",
          "version"
        ]
      },
      "dev:build": {
        "stages": [
          "clean",
          "build",
          "link:runner"
        ]
      },
      "dev:test": {
        "stages": [
          "test-clean",
          "test-build",
          {
            "name": "run-tests",
            "tasks": [
              "test-build:watch",
              {
                "script": "test:watch",
                "outputMode": "stream"
              }
            ],
            "parallel": true
          }
        ]
      }
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.5.1",
    "@manypkg/cli": "^0.10.0",
    "@types/mocha": "^7.0.1",
    "mocha": "^7.0.1",
    "prettier": "^1.19.1",
    "should": "^13.2.3",
    "typescript": "^3.8.2"
  }
}
